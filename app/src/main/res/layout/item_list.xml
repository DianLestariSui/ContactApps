<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_layout_padding_item_list"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/activity_layout_width_image_profile"
        android:layout_height="@dimen/activity_layout_height_image_profile"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_layout_marginStart_text"
        android:layout_toEndOf="@+id/image"
        android:layout_toStartOf="@+id/star"
        android:layout_marginRight="@dimen/activity_layout_marginRight_text"
        android:text="" />
    <ImageView
        android:id="@+id/star"
        android:layout_width="@dimen/activity_layout_width_image_star"
        android:layout_height="@dimen/activity_layout_height_image_star"
        android:background="@drawable/star"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>